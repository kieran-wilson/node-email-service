{
  "name": "src",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "bootstrap": "^4.1.3",
    "create-react-context": "^0.2.2",
    "node-sass-chokidar": "^1.3.3",
    "npm-run-all": "^4.1.3",
    "ramda": "^0.25.0",
    "react": "^16.4.2",
    "react-dom": "^16.4.2",
    "react-router": "^4.3.1",
    "react-scripts": "1.1.4",
    "react-transition-group": "^2.4.0",
    "reactstrap": "^6.3.1"
  },
  "scripts": {
    "watch-css": "npm run build-css && node-sass-chokidar  --include-path ./src src/ -o src/ --watch --recursive",
    "start-js": "react-scripts start",
    "start": "npm-run-all -p watch-css start-js",
    "build-css": "node-sass-chokidar  --include-path ./src src/ -o src/",
    "build-js": "react-scripts build",
    "build": "npm-run-all build-css build-js",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "lint": "./node_modules/.bin/eslint --ext .js --ext .jsx src",
    "lint-fix": "./node_modules/.bin/eslint --fix --ext .js --ext .jsx src",
    "precommit": "lint-staged"
  },
  "devDependencies": {
    "babel-plugin-module-resolver": "^3.1.1",
    "eslint": "^5.3.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-prettier": "^2.6.2",
    "eslint-plugin-react": "^7.10.0",
    "husky": "^0.14.3",
    "lint-staged": "^7.2.0",
    "prettier": "^1.14.2",
    "react-router-dom": "^4.3.1"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "npm run lint-fix",
      "npm run test:staged",
      "git add"
    ]
  }
}
